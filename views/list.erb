<h1>Overview of movies</h1>
<p class="lead">A collection of the best and latest videos curated by Meme Tube!</p>

<p>
	<div class="row">
  		<table class="table">

    	<thead>
      		<tr>
        		<th>#</th>
        		<th width="100;">Title</th>
        		<th>Description</th>
        		<th>Video</th>
        		<th width="150;"></th>
      		</tr>
    	</thead>

    	<tbody>
		<% @videos.each do |video| %>
        	<tr>
          		<td><%= video.id %></td>
         		<td><b><%= video.title %></b></td>
          		<td><%= video.description %> <h4><span class="label label-default"><%= video.genre %></span></h4></td>
            	<td>
					<object width="420" height="315" data="http://www.youtube.com/v/<%= video.video_id %>"></object>
            	</td>
            	<td align="right;">
            		<button type="button" class="btn btn-sm btn-warning">Edit</button>
            		<button type="button" class="btn btn-sm btn-danger">Delete</button>
            	</td>
          	</tr>
        <% end %>
        </tbody>

      </table>
	</div>
</p>
